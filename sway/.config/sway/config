# INPUT
# swaymsg -t get_inputs

input "type:keyboard" {
    xkb_layout us,ru
    xkb_options grp:alt_shift_toggle,caps:escape
    xkb_numlock enabled
}

input type:touchpad {
    tap enabled
    click_method clickfinger
    dwt enablenableded
    natural_scroll enabled
    tap_button_map lmr
}

# SWAYBAR
# man 5 sway-bar
