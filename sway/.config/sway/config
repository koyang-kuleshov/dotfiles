# Screenshots
# capture active display to Picture directory
bindsym Control+Print exec grim -t png "$(xdg-user-dir PICTURES)"/$(date +%Y-%m-%d_%H-%M-%S).png

# capture the specified screen area to clipboard    
bindsym Print exec grim -g "$(slurp)" -t png - | wl-copy -t image/png
    
# capture the focused monitor to clipboard    
bindsym Shift+Control+Print exec grim -t png -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') - | wl-copy -t image/png


# Display lock
exec swayidle \
    timeout 1200 'sh ~/dotfiles/bin/run-swaylock.sh --grace 3 --fade-in 4' \
    # timeout 1800 'swaymsg "output * dpms off"' \
    # resume 'swaymsg "output * dpms on"' \
    before-sleep 'sh ~/dotfiles/bin/run-swaylock.sh'

